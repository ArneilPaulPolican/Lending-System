<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title -->
    <title>Collection Report</title>

    <!-- Styles -->
    @Styles.Render("~/Content/css")
</head>
<body>

    <div id="wrapper">
        <!-- Header -->
        @Html.Partial("SoftwareHeader")

        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="">
                            <i class="fa fa-print fa-fw"></i> Collection Report <small>Print Collection Reports</small>
                        </h3>
                        <ol class="breadcrumb">
                            <li>
                                <a href="/Software">Dashboard</a>
                            </li>
                            <li class="active">
                                Collection Reports
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading" align="right">
                        <button class="btn btn-danger" id="btnClose" onclick="window.location = '/Software'">
                            <i class="fa fa-close fa-fw"></i> Close
                        </button>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-4">
                                <ul class="nav nav-pills nav-stacked">
                                    <li class="active"><a data-toggle="pill" href="#collectionPaperApplicant">Applicant Collection Paper</a></li>
                                    <li><a data-toggle="pill" href="#collectionPaperArea">Area Collection Paper</a></li>
                                    <li><a data-toggle="pill" href="#dailyCollectionAndRemittance">Daily Collection and Remittance</a></li>
                                </ul>
                            </div>
                            <div class="col-md-8">
                                <div class="tab-content">
                                    <div id="collectionPaperApplicant" class="tab-pane fade in active">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                Applicant Collection Paper
                                            </div>
                                            <div class="panel-body">
                                                <div class="form-group">
                                                    <label>Applicant</label><br />
                                                    <div id="cboApplicantCollectionPaperReportApplicant"></div>
                                                </div>
                                                <div class="form-group">
                                                    <label>Loan Number</label><br />
                                                    <div id="cboApplicantCollectionPaperReportLoanNumber" style="width: 100%;"></div>
                                                </div>
                                            </div>
                                            <div class="panel-footer">
                                                <button class="btn btn-primary"><i class="fa fa-eye fa-fw"></i> View</button>
                                                <button class="btn btn-primary" onclick="btnApplicantCollectionPaperOnclick()"><i class="fa fa-print fa-fw"></i> Print</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="collectionPaperArea" class="tab-pane fade">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                Area Collection Paper
                                            </div>
                                            <div class="panel-body">
                                                <div class="form-group">
                                                    <label>Area</label><br />
                                                    <div id="cboAreaCollectionPaperReportArea"></div>
                                                </div>
                                                <div class="form-group">
                                                    <label>Collection Date</label><br />
                                                    <div id="cboAreaCollectionPaperReportCollectionDate"></div>
                                                </div>
                                            </div>
                                            <div class="panel-footer">
                                                <button class="btn btn-primary"><i class="fa fa-eye fa-fw"></i> View</button>
                                                <button class="btn btn-primary" onclick="btnAreaCollectionPaperOnclick()"><i class="fa fa-print fa-fw"></i> Print</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="dailyCollectionAndRemittance" class="tab-pane fade">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                Daily Collection and Remittance
                                            </div>
                                            <div class="panel-body">

                                            </div>
                                            <div class="panel-footer">
                                                <button class="btn btn-primary"><i class="fa fa-eye fa-fw"></i> View</button>
                                                <button class="btn btn-primary"><i class="fa fa-print fa-fw"></i> Print</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        // global variables
        var cboApplicantCollectionPaperReportApplicant;
        var cboApplicantCollectionPaperReportLoanNumber;
        var cboAreaCollectionPaperReportArea;
        var cboAreaCollectionPaperReportCollectionDate;

        // cbo applicant collection paper for applicants
        function createCboApplicant() {
            var applicantArray = new Array();
            $.ajax({
                url: '/api/applicant/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (applicantResults) {
                    var disabled = true;
                    if (applicantResults.length > 0) {
                        for (i = 0; i < applicantResults.length; i++) {
                            applicantArray.push({
                                Id: applicantResults[i]["Id"],
                                ApplicantFullName: applicantResults[i]["ApplicantFullName"]
                            });
                        }

                        disabled = false;
                    }

                    cboApplicantCollectionPaperReportApplicant.dispose();
                    cboApplicantCollectionPaperReportApplicant = new wijmo.input.ComboBox('#cboApplicantCollectionPaperReportApplicant', {
                        disabled: disabled,
                        placeholder: "Select",
                        itemsSource: applicantArray,
                        isEditable: false,
                        required: true,
                        displayMemberPath: "ApplicantFullName",
                        selectedValuePath: "ApplicantFullName",
                        onSelectedIndexChanged: function () {
                            createCboApplicantLoanNumber();
                        }
                    });
                    createCboApplicantLoanNumber();
                }
            });
        }

        // cbo loan number collection paper for applicants
        function createCboApplicantLoanNumber() {
            var loanNumberArray = new Array();
            $.ajax({
                url: '/api/loanApplication/listByApplicantId/' + cboApplicantCollectionPaperReportApplicant.selectedItem["Id"],
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (loanNumberResults) {
                    var disabled = true;
                    if (loanNumberResults.length > 0) {
                        for (i = 0; i < loanNumberResults.length; i++) {
                            loanNumberArray.push({
                                Id: loanNumberResults[i]["Id"],
                                LoanNumber: loanNumberResults[i]["LoanNumber"],
                                LoanNumberDetailed: loanNumberResults[i]["LoanNumber"] + " - from: " + loanNumberResults[i]["LoanDate"] + " to " + loanNumberResults[i]["MaturityDate"]
                            });
                        }

                        disabled = false;
                    }

                    cboApplicantCollectionPaperReportLoanNumber.dispose();
                    cboApplicantCollectionPaperReportLoanNumber = new wijmo.input.ComboBox('#cboApplicantCollectionPaperReportLoanNumber', {
                        disabled: disabled,
                        placeholder: "Select",
                        itemsSource: loanNumberArray,
                        isEditable: false,
                        required: true,
                        displayMemberPath: "LoanNumberDetailed",
                        selectedValuePath: "LoanNumberDetailed",
                    });
                }
            });
        }

        // cbo area collection paper for area
        function createCboArea() {
            var areaArray = new Array();
            $.ajax({
                url: '/api/area/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (areatResults) {
                    var disabled = true;
                    if (areatResults.length > 0) {
                        for (i = 0; i < areatResults.length; i++) {
                            areaArray.push({
                                Id: areatResults[i]["Id"],
                                Area: areatResults[i]["Area"]
                            });
                        }

                        disabled = false;
                    }

                    cboAreaCollectionPaperReportArea.dispose();
                    cboAreaCollectionPaperReportArea = new wijmo.input.ComboBox('#cboAreaCollectionPaperReportArea', {
                        disabled: disabled,
                        placeholder: "Select",
                        itemsSource: areaArray,
                        isEditable: false,
                        required: true,
                        displayMemberPath: "Area",
                        selectedValuePath: "Area",
                    });
                }
            });
        }

        // cbo collection date collection paper for area
        function createCboAreaCollectionPaperReportCollectionDate() {
            cboAreaCollectionPaperReportCollectionDate.dispose();
            cboAreaCollectionPaperReportCollectionDate = new wijmo.input.InputDate('#cboAreaCollectionPaperReportCollectionDate', {
                format: 'MM-dd-yyyy',
                value: new Date(),
                mask: '99-99-9999'
            });
        }

        // area collection report
        function btnAreaCollectionPaperOnclick() {
            window.open('/RepAreaCollectionPaper/areaCollectionPaper?collectionDate=' + [cboAreaCollectionPaperReportCollectionDate.value.getMonth() + 1, cboAreaCollectionPaperReportCollectionDate.value.getDate(), cboAreaCollectionPaperReportCollectionDate.value.getFullYear()].join('-') + '&areaId=' + cboAreaCollectionPaperReportArea.selectedItem["Id"], '_blank');
        }

        // applicant collection report
        function btnApplicantCollectionPaperOnclick() {
            window.open('/RepApplicantCollectionPaper/applicantCollectionPaper?applicantId=' + cboApplicantCollectionPaperReportApplicant.selectedItem["Id"] + '&loanId=' + cboApplicantCollectionPaperReportLoanNumber.selectedItem["Id"], '_blank');
        }

        // on load page
        window.onload = function () {
            cboApplicantCollectionPaperReportLoanNumber = new wijmo.input.ComboBox('#cboApplicantCollectionPaperReportLoanNumber');
            cboApplicantCollectionPaperReportApplicant = new wijmo.input.ComboBox('#cboApplicantCollectionPaperReportApplicant');
            createCboApplicant();

            cboAreaCollectionPaperReportArea = new wijmo.input.ComboBox('#cboAreaCollectionPaperReportArea');
            createCboArea();

            cboAreaCollectionPaperReportCollectionDate = new wijmo.input.InputDate('#cboAreaCollectionPaperReportCollectionDate');
            createCboAreaCollectionPaperReportCollectionDate();

            var canPerformActions = "@ViewData["CanPerformActions"]";
            if (canPerformActions == 1) {
                $('#btnClose').prop('disabled', false);
            } else {
                $(':button').prop('disabled', true);
                $('#btnClose').prop('disabled', false);
                getUserRightsMessageError();
            }
        }
    </script>
</body>
</html>