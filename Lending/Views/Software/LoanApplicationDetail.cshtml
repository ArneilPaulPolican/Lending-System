            var principalAmountValue = document.getElementById('loanApplicationLinePrincipalAmount').value.replace(/\,/g, '');
            var passbookValue = document.getElementById('loanApplicationLinePassbook').value.replace(/\,/g, '');
            var balanceValue = document.getElementById('loanApplicationLineBalance').value.replace(/\,/g, '');
            var penaltyValue = document.getElementById('loanApplicationLinePenalty').value.replace(/\,/g, '');
            var lateIntValue = document.getElementById('loanApplicationLineLateInt').value.replace(/\,/g, '');
            var advanceValue = document.getElementById('loanApplicationLineAdvance').value.replace(/\,/g, '');
            var requirementsValue = document.getElementById('loanApplicationLineRequirements').value.replace(/\,/g, '');
            var insuranceIPIorPPIValue = document.getElementById('loanApplicationLineInsuranceIPIorPPI').value.replace(/\,/g, '');

            document.getElementById('loanApplicationLineProcessingFee').value = (principalAmountValue * 0.03).toLocaleString();

            setTimeout(function () {
                var totalLoanAmountDeductions = principalAmountValue - (principalAmountValue * 0.03) - passbookValue - balanceValue - penaltyValue - lateIntValue - advanceValue - requirementsValue - insuranceIPIorPPIValue;
                document.getElementById('loanApplicationLineTotalNetAmount').value = totalLoanAmountDeductions.toLocaleString();
            }, 500);
        });
