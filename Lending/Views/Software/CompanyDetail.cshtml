<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title -->
    <title>Company Detail</title>

    <!-- Styles -->
    @Styles.Render("~/Content/css")
</head>
<body>
    <!-- Header -->
    @Html.Partial("HomeHeader")

    <section class="software-section">
        <div class="container">
            <div class="btn-group">
                <div class="btn-group">
                    <a href="/Software" class="btn btn-info">
                        Dashboard
                    </a>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                        Set Ups <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="/Software/ApplicantList"><i class="fa fa-users fa-fw"></i> Applicants</a></li>
                        <li><a href="/Software/AreaList"><i class="fa fa-map-pin fa-fw"></i> Area</a></li>
                        <li><a href="/Software/StaffList"><i class="fa fa-user fa-fw"></i> Staff</a></li>
                    </ul>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                        Activities <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="/Software/LoanApplicationList"><i class="fa fa-file-text-o fa-fw"></i> Loan Application</a></li>
                        <li><a href="/Software/CollectionList"><i class="fa fa-money fa-fw"></i> Collection</a></li>
                        <li><a href="/Software/ExpensesList"><i class="fa fa-credit-card fa-fw"></i> Expenses</a></li>
                    </ul>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                        Reports <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="/Software/LoanReport"><i class="fa fa-print fa-fw"></i> Loan Report</a></li>
                        <li><a href="/Software/CollectionReport"><i class="fa fa-print fa-fw"></i> Collection Report</a></li>
                        <li><a href="/Software/ExpensesReport"><i class="fa fa-print fa-fw"></i> Expenses Report</a></li>
                    </ul>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                        System <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="/Software/UserList"><i class="fa fa-key fa-fw"></i> Users</a></li>
                        <li><a href="/Software/CompanyList"><i class="fa fa-building fa-fw"></i> Company</a></li>
                        <li><a href="/Software/SystemTables"><i class="fa fa-table fa-fw"></i> System Tables</a></li>
                    </ul>
                </div>
            </div>
            <br /><br />
            <div class="panel panel-default">
                <div class="panel-heading">
                    <table style="width: 100%">
                        <tr>
                            <td>
                                <h4>Company Detail</h4>
                            </td>
                            <td align="right">
                                <button class="btn btn-primary" id="btnLockCompany" onclick="btnLockCompanyOnclick()">
                                    <i class="fa fa-lock fa-fw"></i> Lock
                                </button>
                                <button class="btn btn-primary" id="btnUnlockCompany" onclick="btnUnlockCompanyOnclick()">
                                    <i class="fa fa-unlock fa-fw"></i> Unlock
                                </button>
                                <button class="btn btn-danger" id="btnCloseCompany" onclick="window.location = '/Software/CompanyList'">
                                    <i class="fa fa-close fa-fw"></i> Close
                                </button>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label>Company Name</label><br />
                                        <input type="text" class="form-control requiredCompany" id="companyName" placeholder="Company Name" />
                                    </div>
                                    <div class="form-group">
                                        <label>Address</label><br />
                                        <textarea class="form-control requiredCompany" rows="5" id="companyAddress" placeholder="Company Address"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label>Contact Number</label><br />
                                        <input type="text" class="form-control requiredCompany" id="companyContactNumber" placeholder="Contact Number" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <p>Created by:</p>
                                    <div style="padding-left: 10px;">
                                        <i class="fa fa-key fa-fw"></i> <label id="stampCreatedBy">NA</label>
                                        <br />
                                        <small><i class="fa fa-calendar fa-fw"></i> &nbsp;<span id="stampCreatedDate">mm/dd/yyyy</span></small>
                                    </div>
                                    <br />
                                    <p>Updated by:</p>
                                    <div style="padding-left: 10px;">
                                        <i class="fa fa-key fa-fw"></i> <label id="stampUpdatedBy">NA</label>
                                        <br />
                                        <small><i class="fa fa-calendar fa-fw"></i> &nbsp;<span id="stampUpdatedDate">mm/dd/yyyy</span></small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <table style="width: 100%">
                                <tr>
                                    <td>
                                        List of Branches
                                    </td>
                                    <td align="right">
                                        <button class="btn btn-primary btn-sm" id="btnAddBranch" onclick="btnAddBranchOnclick()">
                                            <i class="fa fa-plus fa-fw"></i> Add
                                        </button>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="panel-body">
                            <div id="branchFlexGrid" class="grid"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- company detail branch edit  -->
    <div class="modal fade" id="companyDetailBranchEditModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Branch Detail</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Branch</label><br />
                        <input type="text" class="form-control requiredBranch" id="branchName" placeholder="Branch Name" />
                    </div>
                    <div class="form-group">
                        <label>Address</label><br />
                        <textarea class="form-control requiredBranch" rows="5" id="branchAddress" placeholder="Branch Address"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Contact Number</label><br />
                        <input type="text" class="form-control requiredBranch" id="branchContactNumber" placeholder="Branch Contact Number" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" id="btnSaveBranch" onclick="btnSaveBranchOnclick()"><i class="fa fa-save fa-fw"></i> Save</button>
                    <button class="btn btn-danger" id="btnCancelBranch" data-dismiss="modal"><i class="fa fa-close fa-fw"></i> Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- delete confirmation company detail branch modal -->
    <div class="modal fade" id="deleteConfirmationCompanyDetailBranchModal" role="dialog">
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete Branch</h4>
                </div>
                <div class="modal-body">
                    Are you sure that you want to delete this branch?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" id="btnConfirmDeleteBranch" onclick="btnConfirmDeleteBranchOnclick()">Delete</button>
                    <button class="btn btn-default" id="btnConfirmCloseBranch" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    @Html.Partial("HomeFooter")

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        // global variables
        var branchCollectionView;
        var branchFlexGrid;
        var branchId = 0;
        var isLocked = false;

        // get company data
        function getCompanyDetailData() {
            $.ajax({
                url: '/api/company/getById/' + getUrlParameter("id"),
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (companyDetailResult) {
                    if (companyDetailResult != null) {
                        document.getElementById("companyName").value = companyDetailResult.Company;
                        document.getElementById("companyAddress").value = companyDetailResult.Address;
                        document.getElementById("companyContactNumber").value = companyDetailResult.ContactNumber;
                        document.getElementById('stampCreatedBy').innerHTML = companyDetailResult.CreatedByUser;
                        document.getElementById('stampCreatedDate').innerHTML = companyDetailResult.CreatedDateTime;
                        document.getElementById('stampUpdatedBy').innerHTML = companyDetailResult.UpdatedByUser;
                        document.getElementById('stampUpdatedDate').innerHTML = companyDetailResult.UpdatedDateTime;
                        createBranchFlexGrid();

                        if (companyDetailResult.IsLocked) {
                            document.getElementById("companyName").disabled = true;
                            document.getElementById("companyAddress").disabled = true;
                            document.getElementById("companyContactNumber").disabled = true;

                            $("#btnLockCompany").prop("disabled", true);
                            $("#btnAddBranch").prop("disabled", true);

                            isLocked = true;
                        } else {
                            $("#btnUnlockCompany").prop("disabled", true);
                        }
                    } else {
                        alert("The record you'd requested has no data");
                        window.history.back();
                    }
                    NProgress.done();
                }
            });
        }

        // form input validation
        function inputValidation() {
            var isValid = true;
            $('.requiredCompany').each(function () {
                if ($.trim($(this).val()) == '') {
                    isValid = false;
                    $(this).css({
                        "border": "1px solid red"
                    });
                } else {
                    $(this).css({
                        "border": "",
                    });
                }
            });

            return isValid;
        }

        // lock company detail
        function btnLockCompanyOnclick() {
            if (inputValidation()) {
                document.getElementById("btnLockCompany").innerHTML = "<i class='fa fa-spinner fa-spin fa-fw'></i> Locking";
                $("#btnLockCompany").prop("disabled", true);
                $("#btnUnlockCompany").prop("disabled", true);
                $("#btnCloseCompany").prop("disabled", true);
                $("#btnAddBranch").prop("disabled", true);

                var companyDetailObject = new Object();
                companyDetailObject.Company = document.getElementById('companyName').value;
                companyDetailObject.Address = document.getElementById('companyAddress').value;
                companyDetailObject.ContactNumber = document.getElementById('companyContactNumber').value;
                var companyDetailData = JSON.stringify(companyDetailObject);

                $.ajax({
                    type: "PUT",
                    url: '/api/company/lock/' + getUrlParameter("id"),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: companyDetailData,
                    statusCode: {
                        200: function () {
                            toastr.success("Reloading the page", "Lock Successful");
                            window.setTimeout(function () {
                                location.reload();
                            }, 1500);
                        },
                        404: function () {
                            document.getElementById("btnLockCompany").innerHTML = "<i class='fa fa-lock fa-fw'></i> Lock";

                            toastr.error("Not Found");

                            $("#btnLockCompany").prop("disabled", false);
                            $("#btnCloseCompany").prop("disabled", false);
                        },
                        400: function () {
                            document.getElementById("btnLockCompany").innerHTML = "<i class='fa fa-lock fa-fw'></i> Lock";

                            toastr.error("Bad Request");

                            $("#btnLockCompany").prop("disabled", false);
                            $("#btnCloseCompany").prop("disabled", false);
                        }
                    }
                });
            } else {
                toastr.error("Invalid Entry");
            }
        }

        // save changes company detail
        function btnUnlockCompanyOnclick() {
            document.getElementById("btnUnlockCompany").innerHTML = "<i class='fa fa-spinner fa-spin fa-fw'></i> Unlocking";
            $("#btnUnlockCompany").prop("disabled", true);
            $("#btnLockCompany").prop("disabled", true);
            $("#btnCloseCompany").prop("disabled", true);
            $("#btnAddBranch").prop("disabled", true);

            $.ajax({
                type: "PUT",
                url: '/api/company/unlock/' + getUrlParameter("id"),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        toastr.success("Reloading the page", "Unlock Successful");
                        window.setTimeout(function () {
                            location.reload();
                        }, 1500);
                    },
                    404: function () {
                        document.getElementById("btnUnlockCompany").innerHTML = "<i class='fa fa-unlock fa-fw'></i> Unlock";

                        toastr.error("Not Found");

                        $("#btnUnlockCompany").prop("disabled", true);
                        $("#btnCloseCompany").prop("disabled", true);
                    },
                    400: function () {
                        document.getElementById("btnUnlockCompany").innerHTML = "<i class='fa fa-unlock fa-fw'></i> Unlock";

                        toastr.error("Bad Request");

                        $("#btnUnlockCompany").prop("disabled", true);
                        $("#btnCloseCompany").prop("disabled", true);
                    }
                }
            });
        }


        // get branch list by company id
        function getBranchListByCompanyId() {
            var branchesArray = new wijmo.collections.ObservableArray;
            $.ajax({
                url: '/api/branch/listByCompanyId/' + getUrlParameter("id"),
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (branchListResult) {
                    if (branchListResult.length > 0) {
                        for (i = 0; i < branchListResult.length; i++) {
                            var btnEditButton = "<button class='btn btn-primary btn-xs btn-block' onclick='btnEditBranchOnclick()'><i class='fa fa-edit fa-fw'></i> Edit</button>";
                            var btnDeleteButton = "<button class='btn btn-danger btn-xs btn-block' onclick='btnDeleteBranchOnclick()'><i class='fa fa-trash fa-fw'></i> Delete</button>";
                            if (isLocked) {
                                btnEditButton = "<button class='btn btn-primary btn-xs btn-block' onclick='btnEditBranchOnclick()' disabled><i class='fa fa-edit fa-fw'></i> Edit</button>";
                                btnDeleteButton = "<button class='btn btn-danger btn-xs btn-block' onclick='btnDeleteBranchOnclick()' disabled><i class='fa fa-trash fa-fw'></i> Delete</button>";
                            }

                            branchesArray.push({
                                EditButton: btnEditButton,
                                DeleteButton: btnDeleteButton,
                                Id: branchListResult[i]["Id"],
                                CompanyId: branchListResult[i]["CompanyId"],
                                Company: branchListResult[i]["Company"],
                                Branch: branchListResult[i]["Branch"],
                                Address: branchListResult[i]["Address"],
                                ContactNumber: branchListResult[i]["ContactNumber"]
                            });
                        }
                    }

                    NProgress.done();
                }
            });
            return branchesArray;
        }

        // add branch
        function btnAddBranchOnclick() {
            $("#companyDetailBranchEditModal").modal({
                "show": true,
                "backdrop": "static"
            });

            $('.requiredBranch').each(function () {
                $(this).css({
                    "border": "",
                });
            });

            document.getElementById("btnSaveBranch").innerHTML = "<i class='fa fa-save fa-fw'></i> Save";
            $("#btnSaveBranch").prop("disabled", false);
            $("#btnCancelBranch").prop("disabled", false);

            branchId = 0;
            document.getElementById("branchName").value = "NA";
            document.getElementById("branchAddress").value = "NA";
            document.getElementById("branchContactNumber").value = "NA";
        }

        // edit branch
        function btnEditBranchOnclick() {
            $("#companyDetailBranchEditModal").modal({
                "show": true,
                "backdrop": "static"
            });

            $('.requiredBranch').each(function () {
                $(this).css({
                    "border": "",
                });
            });

            document.getElementById("btnSaveBranch").innerHTML = "<i class='fa fa-save fa-fw'></i> Save";
            $("#btnSaveBranch").prop("disabled", false);
            $("#btnCancelBranch").prop("disabled", false);

            branchCollectionView.editItem(branchCollectionView.currentItem);
            var branchCuurentItem = branchCollectionView.currentEditItem;

            branchId = branchCuurentItem.Id;
            document.getElementById("branchName").value = branchCuurentItem.Branch;
            document.getElementById("branchAddress").value = branchCuurentItem.Address;
            document.getElementById("branchContactNumber").value = branchCuurentItem.ContactNumber;
        }

        // form input validation
        function inputValidationForBranch() {
            var isValid = true;
            $('.requiredBranch').each(function () {
                if ($.trim($(this).val()) == '') {
                    isValid = false;
                    $(this).css({
                        "border": "1px solid red"
                    });
                } else {
                    $(this).css({
                        "border": "",
                    });
                }
            });

            return isValid;
        }


        // save branch
        function btnSaveBranchOnclick() {
            if (inputValidationForBranch()) {
                document.getElementById("btnSaveBranch").innerHTML = "<i class='fa fa-spinner fa-spin fa-fw'></i> Saving";
                $("#btnSaveBranch").prop("disabled", true);
                $("#btnCancelBranch").prop("disabled", true);

                var branchDetailObject = new Object();
                branchDetailObject.CompanyId = getUrlParameter("id");
                branchDetailObject.Branch = document.getElementById('branchName').value;
                branchDetailObject.Address = document.getElementById('branchAddress').value;
                branchDetailObject.ContactNumber = document.getElementById('branchContactNumber').value;
                var branchDetailData = JSON.stringify(branchDetailObject);

                if (branchId == 0) {
                    $.ajax({
                        type: "POST",
                        url: '/api/branch/add',
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data: branchDetailData,
                        statusCode: {
                            200: function () {
                                toastr.success("Save Successful");

                                $("#companyDetailBranchEditModal").modal("hide");

                                branchCollectionView = new wijmo.collections.CollectionView(getBranchListByCompanyId());
                                branchFlexGrid.itemsSource = branchCollectionView;
                                branchFlexGrid.trackChanges = true;
                            },
                            404: function () {
                                toastr.error("Not Found");

                                $("#companyDetailBranchEditModal").modal("hide");

                                document.getElementById("btnSaveBranch").innerHTML = "<i class='fa fa-save fa-fw'></i> Save";
                                $("#btnSaveBranch").prop("disabled", false);
                                $("#btnCancelBranch").prop("disabled", false);
                            },
                            400: function () {
                                toastr.error("Bad Request");

                                $("#companyDetailBranchEditModal").modal("hide");

                                document.getElementById("btnSaveBranch").innerHTML = "<i class='fa fa-save fa-fw'></i> Save";
                                $("#btnSaveBranch").prop("disabled", false);
                                $("#btnCancelBranch").prop("disabled", false);
                            }
                        }
                    });
                } else {
                    $.ajax({
                        type: "PUT",
                        url: '/api/branch/update/' + branchId,
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data: branchDetailData,
                        statusCode: {
                            200: function () {
                                toastr.success("Update Successful");

                                $("#companyDetailBranchEditModal").modal("hide");

                                branchCollectionView = new wijmo.collections.CollectionView(getBranchListByCompanyId());
                                branchFlexGrid.itemsSource = branchCollectionView;
                                branchFlexGrid.trackChanges = true;
                            },
                            404: function () {
                                toastr.error("Not Found");

                                $("#companyDetailBranchEditModal").modal("hide");

                                document.getElementById("btnSaveBranch").innerHTML = "<i class='fa fa-save fa-fw'></i> Save";
                                $("#btnSaveBranch").prop("disabled", false);
                                $("#btnCancelBranch").prop("disabled", false);
                            },
                            400: function () {
                                toastr.error("Bad Request");

                                $("#companyDetailBranchEditModal").modal("hide");

                                document.getElementById("btnSaveBranch").innerHTML = "<i class='fa fa-save fa-fw'></i> Save";
                                $("#btnSaveBranch").prop("disabled", false);
                                $("#btnCancelBranch").prop("disabled", false);
                            }
                        }
                    });
                }
            } else {
                toastr.error("Invalid Entry");
            }
        }

        // delete branch
        function btnDeleteBranchOnclick() {
            $("#deleteConfirmationCompanyDetailBranchModal").modal({
                "show": true,
                "backdrop": "static"
            });

            document.getElementById("btnConfirmDeleteBranch").innerHTML = "Delete";
            $("#btnConfirmDeleteBranch").prop("disabled", false);
            $("#btnConfirmCloseBranch").prop("disabled", false);
        }

        // confirm delete branch
        function btnConfirmDeleteBranchOnclick() {
            document.getElementById("btnConfirmDeleteBranch").innerHTML = "<i class='fa fa-spinner fa-spin fa-fw'></i> Deleting";
            $("#btnConfirmDeleteBranch").prop("disabled", true);
            $("#btnConfirmCloseBranch").prop("disabled", true);

            branchCollectionView.editItem(branchCollectionView.currentItem);
            var branchCuurentItem = branchCollectionView.currentEditItem;

            $.ajax({
                type: "DELETE",
                url: '/api/branch/delete/' + branchCuurentItem.Id,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        toastr.success("Delete Successful");

                        $("#deleteConfirmationCompanyDetailBranchModal").modal("hide");

                        branchCollectionView = new wijmo.collections.CollectionView(getBranchListByCompanyId());
                        branchFlexGrid.itemsSource = branchCollectionView;
                        branchFlexGrid.trackChanges = true;
                    },
                    404: function () {
                        toastr.error("Record Not Found");

                        $("#deleteConfirmationCompanyDetailBranchModal").modal("hide");

                        document.getElementById("btnConfirmDeleteBranch").innerHTML = "Delete";
                        $("#btnConfirmDeleteBranch").prop("disabled", false);
                        $("#btnConfirmCloseBranch").prop("disabled", false);
                    },
                    400: function () {
                        toastr.error("Bad Request");

                        $("#deleteConfirmationCompanyDetailBranchModal").modal("hide");

                        document.getElementById("btnConfirmDeleteBranch").innerHTML = "Delete";
                        $("#btnConfirmDeleteBranch").prop("disabled", false);
                        $("#btnConfirmCloseBranch").prop("disabled", false);
                    }
                }
            });
        }

        // create flexgrid for branch list
        function createBranchFlexGrid() {
            branchCollectionView = new wijmo.collections.CollectionView(getBranchListByCompanyId());

            // Flex Grid
            branchFlexGrid = new wijmo.grid.FlexGrid('#branchFlexGrid');
            branchFlexGrid.initialize({
                columns: [
                            {
                                "header": "Appliance Owned",
                                "isReadOnly": true,
                                "visible": false,
                                "allowDragging": false,
                                "width": "*"
                            },
                            {
                                "header": "Edit",
                                "binding": "EditButton",
                                "width": 80,
                                "align": "center",
                                "allowResizing": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "Delete",
                                "binding": "DeleteButton",
                                "width": 80,
                                "align": "center",
                                "allowResizing": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "Branch",
                                "binding": "Branch",
                                "allowSorting": true,
                                "width": "3*",
                            },
                            {
                                "header": "Address",
                                "binding": "Address",
                                "allowSorting": true,
                                "width": "4*",
                            },
                            {
                                "header": "Contact Number",
                                "binding": "ContactNumber",
                                "allowSorting": true,
                                "width": "2*",
                            }
                ],
                autoGenerateColumns: false,
                itemsSource: branchCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            branchFlexGrid.trackChanges = true;
        }

        // on load page
        window.onload = function () {
            NProgress.start();
            toastrModification();
            getCompanyDetailData();
        }
    </script>
</body>
</html>