<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title -->
    <title>Area Detail</title>

    <!-- Styles -->
    @Styles.Render("~/Content/css")
</head>
<body>
    <div id="wrapper">
        <!-- Header -->
        @Html.Partial("SoftwareHeader")

        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="">
                            <i class="fa fa-map-marker fa-fw"></i>  Area Detail <small>Edit detail page</small>
                        </h3>
                        <ol class="breadcrumb">
                            <li>
                                <a href="/Software">Dashboard</a>
                            </li>
                            <li class="active">
                                <a href="/Software/AreaList">Areas</a>
                            </li>
                            <li class="active">
                                Area Detail
                            </li>
                        </ol>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading" align="right">
                        <button class="btn btn-primary" id="btnLockArea" onclick="btnLockAreaOnclick()">
                            <i class="fa fa-lock fa-fw"></i> Lock
                        </button>
                        <button class="btn btn-primary" id="btnUnlockArea" onclick="btnUnlockAreaOnclick()">
                            <i class="fa fa-unlock fa-fw"></i> Unlock
                        </button>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <form class="form-horizontal">
                                            <div class="form-group">
                                                <label class="control-label col-sm-4">Area Number</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control requiredArea" id="areaNumber" placeholder="Area Number" disabled />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-4">Area</label>
                                                <div class="col-sm-8">
                                                    <input type="text" class="form-control requiredArea" id="areaName" placeholder="Area" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-4">Description</label>
                                                <div class="col-sm-8">
                                                    <textarea class="form-control requiredArea" rows="5" id="areaDescription" placeholder="Description"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-sm-4">Supervisor</label>
                                                <div class="col-sm-8">
                                                    <div id="cboAreaSuperVisor" style="width: 100%;"></div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p>Created by:</p>
                                                <div style="padding-left: 10px;">
                                                    <i class="fa fa-key fa-fw"></i> <label id="stampCreatedBy">NA</label>
                                                    <br />
                                                    <small><i class="fa fa-calendar fa-fw"></i> &nbsp;<span id="stampCreatedDate">mm/dd/yyyy</span></small>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <p>Updated by:</p>
                                                <div style="padding-left: 10px;">
                                                    <i class="fa fa-key fa-fw"></i> <label id="stampUpdatedBy">NA</label>
                                                    <br />
                                                    <small><i class="fa fa-calendar fa-fw"></i> &nbsp;<span id="stampUpdatedDate">mm/dd/yyyy</span></small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <table style="width: 100%">
                                    <tr>
                                        <td>
                                            Area Collector / Staff
                                        </td>
                                        <td align="right">
                                            <button class="btn btn-primary " id="btnAddAreaStaff" onclick="btnAddAreaStaffOnclick()">
                                                <i class="fa fa-plus fa-fw"></i> Add
                                            </button>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="panel-body">
                                <div id="areaStaffFlexgrid" class="grid"></div>
                            </div>
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="btn-group col-md-7" id="naviagtionPageGrid">
                                        <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                                            <span class="glyphicon glyphicon-fast-backward"></span> First
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                                            <span class="glyphicon glyphicon-step-backward"></span> Previous
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid"></button>
                                        <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                                            <span class="glyphicon glyphicon-step-forward"></span> Next
                                        </button>
                                        <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                                            <span class="glyphicon glyphicon-fast-forward"></span> Last
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- area staff detail modal -->
    <div class="modal fade" id="areaStaffDetailModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Area Staff Detail</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-4">Staff</label>
                            <div class="col-sm-8">
                                <div id="cboStaff" style="width: 100%;"></div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" id="btnSaveAreaStaff" onclick="btnSaveAreaStaffOnclick()"><i class="fa fa-save fa-fw"></i> Save</button>
                    <button class="btn btn-danger" id="btnCloseAreaStaff" data-dismiss="modal"><i class="fa fa-close fa-fw"></i> Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- area staff delete modal -->
    <div class="modal fade" id="areaStaffDeleteModal" role="dialog">
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete Area Staff</h4>
                </div>
                <div class="modal-body">
                    Are you sure that you want to delete this Area Staff?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" id="btnConfirmDeleteAreaStaff" onclick="btnConfirmDeleteAreaStaffOnclick()">Delete</button>
                    <button class="btn btn-default" id="btnCloseDeleteAreaStaff" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        // global variables
        var branchCollectionView;
        var branchFlexGrid;
        var branchId = 0;
        var isLocked = false;
        var cboAreaSuperVisor;
        var btnFirstPageGrid;
        var btnPreviousPageGrid;
        var btnNextPageGrid;
        var btnLastPageGrid;
        var btnCurrentPageGrid;

        // get area data
        function getAreaDetailData() {
            $.ajax({
                url: '/api/area/getById/' + getUrlParameter("id"),
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (areaDetailResult) {
                    if (areaDetailResult != null) {
                        document.getElementById("areaNumber").value ="AR-" + areaDetailResult.AreaNumber;
                        document.getElementById("areaName").value = areaDetailResult.Area;
                        document.getElementById("areaDescription").value = areaDetailResult.Description;
                        cboAreaSuperVisor.selectedValue = areaDetailResult.SupervisorStaff;

                        document.getElementById('stampCreatedBy').innerHTML = areaDetailResult.CreatedByUser;
                        document.getElementById('stampCreatedDate').innerHTML = areaDetailResult.CreatedDateTime;
                        document.getElementById('stampUpdatedBy').innerHTML = areaDetailResult.UpdatedByUser;
                        document.getElementById('stampUpdatedDate').innerHTML = areaDetailResult.UpdatedDateTime;

                        if (areaDetailResult.IsLocked) {
                            document.getElementById("areaName").disabled = true;
                            document.getElementById("areaDescription").disabled = true;
                            cboAreaSuperVisor.disabled = true;

                            $("#btnLockArea").prop("disabled", true);
                            $("#btnAddAreaStaff").prop("disabled", true);

                            isLocked = true;
                        } else {
                            $("#btnUnlockArea").prop("disabled", true);
                        }
                    } else {
                        alert("The record you'd requested has no data");
                        window.history.back();
                    }

                    createFlexGridForAreaStaffs();
                    NProgress.done();
                }
            });
        }

        // get staff
        function getSupervisorStaff() {
            var staffSupervisorArray = new Array();
            $.ajax({
                url: '/api/staff/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (staffSupervisorResults) {
                    var disabled = true;
                    if (staffSupervisorResults.length > 0) {
                        for (i = 0; i < staffSupervisorResults.length; i++) {
                            staffSupervisorArray.push({
                                Id: staffSupervisorResults[i]["Id"],
                                Staff: staffSupervisorResults[i]["Staff"],
                            });
                        }
                        disabled = false;

                    } else {

                    }

                    cboAreaSuperVisor.dispose();
                    cboAreaSuperVisor = new wijmo.input.ComboBox('#cboAreaSuperVisor', {
                        disabled: disabled,
                        placeholder: "Select",
                        itemsSource: staffSupervisorArray,
                        isEditable: false,
                        required: true,
                        displayMemberPath: "Staff",
                        selectedValuePath: "Staff"
                    });

                    getAreaDetailData();
                }
            });
        }

        // form input validation
        function inputValidation() {
            var isValid = true;
            $('.requiredArea').each(function () {
                if ($.trim($(this).val()) == '') {
                    isValid = false;
                    $(this).css({
                        "border": "1px solid red"
                    });
                } else {
                    $(this).css({
                        "border": "",
                    });
                }
            });

            return isValid;
        }

        // lock area detail
        function btnLockAreaOnclick() {
            if (inputValidation()) {
                document.getElementById("btnLockArea").innerHTML = "<i class='fa fa-spinner fa-spin fa-fw'></i> Locking";
                $("#btnLockArea").prop("disabled", true);
                $("#btnUnlockArea").prop("disabled", true);
                $("#btnClose").prop("disabled", true);
                $("#btnAddBranch").prop("disabled", true);

                var areaDetailObject = new Object();
                areaDetailObject.Area = document.getElementById('areaName').value;
                areaDetailObject.Description = document.getElementById('areaDescription').value;
                areaDetailObject.SupervisorStaffId = cboAreaSuperVisor.selectedItem["Id"];
                var areaDetailData = JSON.stringify(areaDetailObject);

                $.ajax({
                    type: "PUT",
                    url: '/api/area/lock/' + getUrlParameter("id"),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: areaDetailData,
                    statusCode: {
                        200: function () {
                            toastr.success("Reloading the page", "Lock Successful");
                            window.setTimeout(function () {
                                location.reload();
                            }, 1500);
                        },
                        404: function () {
                            document.getElementById("btnLockArea").innerHTML = "<i class='fa fa-lock fa-fw'></i> Lock";

                            toastr.error("Not Found");

                            $("#btnLockArea").prop("disabled", false);
                            $("#btnClose").prop("disabled", false);
                        },
                        400: function () {
                            document.getElementById("btnLockArea").innerHTML = "<i class='fa fa-lock fa-fw'></i> Lock";

                            toastr.error("Bad Request");

                            $("#btnLockArea").prop("disabled", false);
                            $("#btnClose").prop("disabled", false);
                        }
                    }
                });
            } else {
                toastr.error("Invalid Entry");
            }
        }

        // save changes area detail
        function btnUnlockAreaOnclick() {
            document.getElementById("btnUnlockArea").innerHTML = "<i class='fa fa-spinner fa-spin fa-fw'></i> Unlocking";
            $("#btnUnlockArea").prop("disabled", true);
            $("#btnLockArea").prop("disabled", true);
            $("#btnClose").prop("disabled", true);
            $("#btnAddBranch").prop("disabled", true);

            $.ajax({
                type: "PUT",
                url: '/api/area/unlock/' + getUrlParameter("id"),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        toastr.success("Reloading the page", "Unlock Successful");
                        window.setTimeout(function () {
                            location.reload();
                        }, 1500);
                    },
                    404: function () {
                        document.getElementById("btnUnlockArea").innerHTML = "<i class='fa fa-unlock fa-fw'></i> Unlock";

                        toastr.error("Not Found");

                        $("#btnUnlockArea").prop("disabled", true);
                        $("#btnClose").prop("disabled", true);
                    },
                    400: function () {
                        document.getElementById("btnUnlockArea").innerHTML = "<i class='fa fa-unlock fa-fw'></i> Unlock";

                        toastr.error("Bad Request");

                        $("#btnUnlockArea").prop("disabled", true);
                        $("#btnClose").prop("disabled", true);
                    }
                }
            });
        }

        // area staff
        function getAreaStaff() {
            var areaStaffArray = new wijmo.collections.ObservableArray;
            $.ajax({
                url: '/api/areaStaff/listByAreaId/' + getUrlParameter("id"),
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (areaStaffResults) {
                    if (areaStaffResults.length > 0) {
                        for (i = 0; i < areaStaffResults.length; i++) {
                            var btnEditButton = "<button class='btn btn-primary btn-xs btn-block' onclick='btnEditAreaStaff()'><i class='fa fa-edit fa-fw'></i> Edit</button>";
                            var btnDeleteButton = "<button class='btn btn-danger btn-xs btn-block' onclick='btnDeleteAreaStaff()'><i class='fa fa-trash fa-fw'></i> Delete</button>";

                            var canPerformActions = "@ViewData["CanPerformActions"]";
                            if (canPerformActions == 1) {
                                if (isLocked) {
                                    btnEditButton = "<button class='btn btn-primary btn-xs btn-block' onclick='btnEditAreaStaff()' disabled><i class='fa fa-edit fa-fw'></i> Edit</button>";
                                    btnDeleteButton = "<button class='btn btn-danger btn-xs btn-block' onclick='btnDeleteAreaStaff()' disabled><i class='fa fa-trash fa-fw'></i> Delete</button>";
                                } else {
                                    btnEditButton = "<button class='btn btn-primary btn-xs btn-block' onclick='btnEditAreaStaff()'><i class='fa fa-edit fa-fw'></i> Edit</button>";
                                    btnDeleteButton = "<button class='btn btn-danger btn-xs btn-block' onclick='btnDeleteAreaStaff()'><i class='fa fa-trash fa-fw'></i> Delete</button>";
                                }
                            } else {
                                btnEditButton = "<button class='btn btn-primary btn-xs btn-block' onclick='btnEditAreaStaff()' disabled><i class='fa fa-edit fa-fw'></i> Edit</button>";
                                btnDeleteButton = "<button class='btn btn-danger btn-xs btn-block' onclick='btnDeleteAreaStaff()' disabled><i class='fa fa-trash fa-fw'></i> Delete</button>";
                            }

                            areaStaffArray.push({
                                EditButton: btnEditButton,
                                DeleteButton: btnDeleteButton,
                                Id: areaStaffResults[i]["Id"],
                                StaffId: areaStaffResults[i]["StaffId"],
                                Staff: areaStaffResults[i]["Staff"]
                            });
                        }
                    }

                    NProgress.done();
                }
            });

            return areaStaffArray;
        }

        var areaStaffCollectionView;
        var areaStaffFlexgrid;

        // Navigation Buttons for area
        function updateNavigateButtonsStaffs() {
            if (areaStaffCollectionView.pageSize <= 0) {
                document.getElementById('naviagtionPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('naviagtionPageGrid').style.display = 'block';
            btnCurrentPageGrid.innerHTML = (areaStaffCollectionView.pageIndex + 1) + ' / ' + areaStaffCollectionView.pageCount;
        }

        // create flexgrid for area staff
        function createFlexGridForAreaStaffs() {
            areaStaffCollectionView = new wijmo.collections.CollectionView(getAreaStaff());
            areaStaffCollectionView.pageSize = 15;

            areaStaffCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtonsStaffs();
            });

            areaStaffFlexgrid = new wijmo.grid.FlexGrid('#areaStaffFlexgrid');
            areaStaffFlexgrid.initialize({
                columns: [
                            {
                                "header": "Edit",
                                "binding": "EditButton",
                                "width": 80,
                                "align": "center",
                                "allowResizing": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "Delete",
                                "binding": "DeleteButton",
                                "width": 80,
                                "align": "center",
                                "allowResizing": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "Staff",
                                "binding": "Staff",
                                "allowSorting": true,
                                "width": "3*",
                            }
                ],
                autoGenerateColumns: false,
                itemsSource: areaStaffCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            areaStaffFlexgrid.trackChanges = true;

            //Navigation button
            btnFirstPageGrid = document.getElementById('btnMoveToFirstPageGrid');
            btnPreviousPageGrid = document.getElementById('btnMoveToPreviousPageGrid');
            btnNextPageGrid = document.getElementById('btnMoveToNextPageGrid');
            btnLastPageGrid = document.getElementById('btnMoveToLastPageGrid');
            btnCurrentPageGrid = document.getElementById('btnCurrentPageGrid');

            updateNavigateButtonsStaffs();

            btnFirstPageGrid.addEventListener('click', function () {
                areaStaffCollectionView.moveToFirstPage();
                updateNavigateButtonsStaffs();
            });
            btnPreviousPageGrid.addEventListener('click', function () {
                areaStaffCollectionView.moveToPreviousPage();
                updateNavigateButtonsStaffs();
            });
            btnNextPageGrid.addEventListener('click', function () {
                areaStaffCollectionView.moveToNextPage();
                updateNavigateButtonsStaffs();
            });
            btnLastPageGrid.addEventListener('click', function () {
                areaStaffCollectionView.moveToLastPage();
                updateNavigateButtonsStaffs();
            });
        }

        // create cbo staff
        function createCboStaff() {
            var staffArray = new Array();
            $.ajax({
                url: '/api/staff/list',
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                data: {},
                success: function (staffResults) {
                    var disabled = true;
                    if (staffResults.length > 0) {
                        for (i = 0; i < staffResults.length; i++) {
                            staffArray.push({
                                Id: staffResults[i]["Id"],
                                Staff: staffResults[i]["Staff"],
                            });
                        }

                        disabled = false;
                    }

                    cboStaff.dispose();
                    cboStaff = new wijmo.input.ComboBox('#cboStaff', {
                        disabled: disabled,
                        placeholder: "Select",
                        itemsSource: staffArray,
                        isEditable: false,
                        required: true,
                        displayMemberPath: "Staff",
                        selectedValuePath: "Staff"
                    });
                }
            });
        }

        var areaStaffId = 0;

        // edit area staff
        function btnEditAreaStaff() {
            $("#areaStaffDetailModal").modal({
                "show": true,
                "backdrop": "static"
            });

            document.getElementById("btnSaveAreaStaff").innerHTML = "<i class='fa fa-save fa-fw'></i> Save";
            $("#btnSaveAreaStaff").prop("disabled", false);
            $("#btnCloseAreaStaff").prop("disabled", false);

            areaStaffCollectionView.editItem(areaStaffCollectionView.currentItem);
            var currentItem = areaStaffCollectionView.currentEditItem;

            areaStaffId = currentItem.Id;
            cboStaff.selectedValue = currentItem.Staff;
        }

        // add area staff
        function btnAddAreaStaffOnclick() {
            $("#areaStaffDetailModal").modal({
                "show": true,
                "backdrop": "static"
            });

            document.getElementById("btnSaveAreaStaff").innerHTML = "<i class='fa fa-save fa-fw'></i> Save";
            $("#btnSaveAreaStaff").prop("disabled", false);
            $("#btnCloseAreaStaff").prop("disabled", false);

            areaStaffId = 0;
            createCboStaff();
        }

        // save area staff
        function btnSaveAreaStaffOnclick() {
            document.getElementById("btnSaveAreaStaff").innerHTML = "<i class='fa fa-spinner fa-spin fa-fw'></i> Saving";
            $("#btnSaveAreaStaff").prop("disabled", true);
            $("#btnCloseAreaStaff").prop("disabled", true);

            var areaStaffObject = new Object();
            areaStaffObject.AreaId = getUrlParameter("id");
            areaStaffObject.StaffId = cboStaff.selectedItem["Id"];
            var areaStaffData = JSON.stringify(areaStaffObject);

            if (areaStaffId == 0) {
                $.ajax({
                    type: "POST",
                    url: '/api/areaStaff/add',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: areaStaffData,
                    statusCode: {
                        200: function () {
                            toastr.success("Save Successful");

                            $("#areaStaffDetailModal").modal("hide");

                            areaStaffCollectionView = new wijmo.collections.CollectionView(getAreaStaff());
                            areaStaffCollectionView.pageSize = 15;

                            areaStaffCollectionView.collectionChanged.addHandler(function (sender, args) {
                                updateNavigateButtonsStaffs();
                            });

                            areaStaffFlexgrid.itemsSource = areaStaffCollectionView;
                            areaStaffFlexgrid.trackChanges = true;
                        },
                        404: function () {
                            toastr.error("Record Not Found");

                            $("#areaStaffDetailModal").modal("hide");

                            document.getElementById("btnSaveAreaStaff").innerHTML = "<i class='fa fa-save fa-fw'></i> Save";
                            $("#btnSaveAreaStaff").prop("disabled", false);
                            $("#btnCloseAreaStaff").prop("disabled", false);
                        },
                        400: function () {
                            toastr.error("Bad Request");

                            $("#areaStaffDetailModal").modal("hide");

                            document.getElementById("btnSaveAreaStaff").innerHTML = "<i class='fa fa-save fa-fw'></i> Save";
                            $("#btnSaveAreaStaff").prop("disabled", false);
                            $("#btnCloseAreaStaff").prop("disabled", false);
                        }
                    }
                });
            } else {
                $.ajax({
                    type: "PUT",
                    url: '/api/areaStaff/update/' + areaStaffId,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    data: areaStaffData,
                    statusCode: {
                        200: function () {
                            toastr.success("Update Successful");

                            $("#areaStaffDetailModal").modal("hide");

                            areaStaffCollectionView = new wijmo.collections.CollectionView(getAreaStaff());
                            areaStaffCollectionView.pageSize = 15;

                            areaStaffCollectionView.collectionChanged.addHandler(function (sender, args) {
                                updateNavigateButtonsStaffs();
                            });

                            areaStaffFlexgrid.itemsSource = areaStaffCollectionView;
                            areaStaffFlexgrid.trackChanges = true;
                        },
                        404: function () {
                            toastr.error("Record Not Found");

                            $("#areaStaffDetailModal").modal("hide");

                            document.getElementById("btnSaveAreaStaff").innerHTML = "<i class='fa fa-save fa-fw'></i> Save";
                            $("#btnSaveAreaStaff").prop("disabled", false);
                            $("#btnCloseAreaStaff").prop("disabled", false);
                        },
                        400: function () {
                            toastr.error("Bad Request");

                            $("#areaStaffDetailModal").modal("hide");

                            document.getElementById("btnSaveAreaStaff").innerHTML = "<i class='fa fa-save fa-fw'></i> Save";
                            $("#btnSaveAreaStaff").prop("disabled", false);
                            $("#btnCloseAreaStaff").prop("disabled", false);
                        }
                    }
                });
            }
        }

        // delete area staff
        function btnDeleteAreaStaff() {
            $("#areaStaffDeleteModal").modal({
                "show": true,
                "backdrop": "static"
            });

            document.getElementById("btnConfirmDeleteAreaStaff").innerHTML = "Delete";
            $("#btnConfirmDeleteAreaStaff").prop("disabled", false);
            $("#btnCloseDeleteAreaStaff").prop("disabled", false);
        }
        function btnConfirmDeleteAreaStaffOnclick() {
            document.getElementById("btnConfirmDeleteAreaStaff").innerHTML = "<i class='fa fa-spinner fa-spin fa-fw'></i> Deleting";
            $("#btnConfirmDeleteAreaStaff").prop("disabled", true);
            $("#btnCloseDeleteAreaStaff").prop("disabled", true);

            areaStaffCollectionView.editItem(areaStaffCollectionView.currentItem);
            var currentItem = areaStaffCollectionView.currentEditItem;

            $.ajax({
                type: "DELETE",
                url: '/api/areaStaff/delete/' + currentItem.Id,
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        toastr.success("Delete Successful");

                        $("#areaStaffDeleteModal").modal("hide");

                        areaStaffCollectionView = new wijmo.collections.CollectionView(getAreaStaff());
                        areaStaffCollectionView.pageSize = 15;

                        areaStaffCollectionView.collectionChanged.addHandler(function (sender, args) {
                            updateNavigateButtonsStaffs();
                        });

                        areaStaffFlexgrid.itemsSource = areaStaffCollectionView;
                        areaStaffFlexgrid.trackChanges = true;
                    },
                    404: function () {
                        toastr.error("Record Not Found");

                        $("#areaStaffDeleteModal").modal("hide");

                        document.getElementById("btnConfirmDeleteAreaStaff").innerHTML = "Delete";
                        $("#btnConfirmDeleteAreaStaff").prop("disabled", false);
                        $("#btnCloseDeleteAreaStaff").prop("disabled", false);
                    },
                    400: function () {
                        toastr.error("Bad Request");

                        $("#areaStaffDeleteModal").modal("hide");

                        document.getElementById("btnConfirmDeleteAreaStaff").innerHTML = "Delete";
                        $("#btnConfirmDeleteAreaStaff").prop("disabled", false);
                        $("#btnCloseDeleteAreaStaff").prop("disabled", false);
                    }
                }
            });
        }

        // on load page
        window.onload = function () {
            NProgress.start();
            toastrModification();
            cboAreaSuperVisor = new wijmo.input.ComboBox('#cboAreaSuperVisor');
            getSupervisorStaff();

            cboStaff = new wijmo.input.ComboBox('#cboStaff');
            createCboStaff();

            var canPerformActions = "@ViewData["CanPerformActions"]";
            if (canPerformActions == 1) {
                $('#btnClose').prop('disabled', false);
            } else {
                $(':button').prop('disabled', true);
                $('#btnClose').prop('disabled', false);
                getUserRightsMessageError();
            }
        }
    </script>
</body>
