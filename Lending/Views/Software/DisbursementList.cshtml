<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Title -->
    <title>Disbursement List</title>

    <!-- Styles -->
    @Styles.Render("~/Content/css")
</head>
<body>
    <!-- Header -->
    @Html.Partial("HomeHeader")

    <section class="software-section">
        <div class="container">
            <div class="btn-group">
                <div class="btn-group">
                    <a href="/Software" class="btn btn-info">
                        Dashboard
                    </a>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                        Set Ups <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="/Software/ApplicantList"><i class="fa fa-users fa-fw"></i> Applicants</a></li>
                        <li><a href="/Software/Tables"><i class="fa fa-table fa-fw"></i> Tables</a></li>
                    </ul>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                        Activities <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="/Software/LoanApplicationList"><i class="fa fa-file-text-o fa-fw"></i> Loan Application</a></li>
                        <li><a href="/Software/CollectionList"><i class="fa fa-money fa-fw"></i> Collection</a></li>
                        <li><a href="/Software/DisbursementList"><i class="fa fa-credit-card fa-fw"></i> Disbursement</a></li>
                    </ul>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                        System <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="/Software/CompanyList"><i class="fa fa-building fa-fw"></i> Company</a></li>
                        <li><a href="/Software/UserList"><i class="fa fa-key fa-fw"></i> Users</a></li>
                        <li class="divider"></li>
                        <li><a href="/Manage/Index"><i class="fa fa-gears fa-fw"></i> Settings</a></li>
                    </ul>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
                        Reports <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="/Software/Reports"><i class="fa fa-print fa-fw"></i> Generate Reports</a></li>
                    </ul>
                </div>
            </div>
            <br /><br />
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Disbursements</h4>
                </div>
                <div class="panel-heading">
                    <table style="width: 100%">
                        <tr>
                            <td>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-search fa-fw"></i> </span>
                                    <input type="text" id="searchDisbursement" class="form-control" placeholder="Search" />
                                </div>
                            </td>
                            <td>&nbsp;&nbsp;&nbsp;</td>
                            <td align="right">
                                <button class="btn btn-primary" id="btnAddDisbursement" onclick="btnAddDisbursementOnclick()">
                                    <i class="fa fa-plus fa-fw"></i>&nbsp; Add
                                </button>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="panel-heading">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-calendar fa-fw"></i> Disbursement Date</span>
                        <div id="cboDisbursementDate"></div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="flexgridHeight">
                        <div id="disbursementListFlexGrid" class="grid"></div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="btn-group col-md-7" id="navigationPageGrid">
                            <button type="button" class="btn btn-default border-custom" id="btnMoveToFirstPageGrid">
                                <span class="glyphicon glyphicon-fast-backward"></span>
                            </button>
                            <button type="button" class="btn btn-default border-custom" id="btnMoveToPreviousPageGrid">
                                <span class="glyphicon glyphicon-step-backward"></span>
                            </button>
                            <button type="button" class="btn btn-default border-custom" disabled style="width: 100px" id="btnCurrentPageGrid"></button>
                            <button type="button" class="btn btn-default border-custom" id="btnMoveToNextPageGrid">
                                <span class="glyphicon glyphicon-step-forward"></span>
                            </button>
                            <button type="button" class="btn btn-default border-custom" id="btnMoveToLastPageGrid">
                                <span class="glyphicon glyphicon-fast-forward"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    User security stamp
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p>Created by:</p>
                            <div style="padding-left: 10px;">
                                <i class="fa fa-key fa-fw"></i> <label id="stampCreatedBy">NA</label>
                                <br />
                                <small><i class="fa fa-calendar fa-fw"></i> &nbsp;<span id="stampCreatedDate">mm/dd/yyyy</span></small>
                            </div>
                            <br />
                        </div>
                        <div class="col-md-6">
                            <p>Updated by:</p>
                            <div style="padding-left: 10px;">
                                <i class="fa fa-key fa-fw"></i> <label id="stampUpdatedBy">NA</label>
                                <br />
                                <small><i class="fa fa-calendar fa-fw"></i> &nbsp;<span id="stampUpdatedDate">mm/dd/yyyy</span></small>
                            </div>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- delete confirmation disbursement modal -->
    <div class="modal fade" id="deleteConfirmationDisbursementModal" role="dialog">
        <div class="modal-dialog modal-sm">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Delete Disbursement</h4>
                </div>
                <div class="modal-body">
                    Are you sure that you want to delete this Disbursement?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" id="btnConfirmDeleteDisbursement" onclick="btnConfirmDeleteDisbursementOnclick()">Yes</button>
                    <button class="btn btn-default" id="btnCloseDeleteDisbursementModal" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    @Html.Partial("HomeFooter")

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript">
        // global variables
        var cboDisbursementDate;
        var disbursementCollectionView;
        var disbursementFlexGrid;
        var btnFirstPageGrid;
        var btnPreviousPageGrid;
        var btnNextPageGrid;
        var btnLastPageGrid;
        var btnCurrentPageGrid;
        var isDisbursementDateClicked = false;

        // create cbo date for disbursement date
        function createCboDisbursementDate() {
            cboDisbursementDate.dispose();
            cboDisbursementDate = new wijmo.input.InputDate('#cboDisbursementDate', {
                format: 'MM-dd-yyyy',
                value: new Date(),
                mask: '99-99-9999',
                onValueChanged: function () {
                    if (isDisbursementDateClicked == true) {
                        NProgress.start();
                        disbursementCollectionView = new wijmo.collections.CollectionView(getDisbursementList());
                        disbursementCollectionView.canFilter = true;
                        disbursementCollectionView.pageSize = 15;

                        var filterText = '';
                        $('#searchDisbursement').keyup(function () {
                            filterText = this.value.toLowerCase();
                            disbursementCollectionView.refresh();
                        });

                        disbursementCollectionView.filter = function (item) {
                            return !filterText || (item.DisbursementNumber.toLowerCase().indexOf(filterText) > -1)
                                               || (item.Payee.toLowerCase().indexOf(filterText) > -1);
                        }

                        disbursementCollectionView.collectionChanged.addHandler(function (sender, args) {
                            updateNavigateButtons();
                        });

                        disbursementCollectionView.currentChanged.addHandler(function (sender, args) {
                            updateStampSecurity();
                        });

                        // Flex Grid
                        disbursementFlexGrid.itemsSource = disbursementCollectionView;
                        disbursementFlexGrid.trackChanges = true;
                    } else {
                        isDisbursementDateClicked = true;
                    }
                }
            });
        }

        // get disbursement list
        function getDisbursementList() {
            var disbursementListArray = new wijmo.collections.ObservableArray;
            $.ajax({
                url: '/api/disbursement/listByDisbursementDate/' + [cboDisbursementDate.value.getMonth() + 1, cboDisbursementDate.value.getDate(), cboDisbursementDate.value.getFullYear()].join('-'),
                cache: false,
                type: 'GET',
                contentType: 'application/json; charset=utf-8',
                success: function (disbursementListResult) {
                    if (disbursementListResult.length > 0) {
                        for (i = 0; i < disbursementListResult.length; i++) {
                            var isLocked = false;
                            if (disbursementListResult[i]["IsLocked"]) {
                                isLocked = true;
                            }

                            disbursementListArray.push({
                                EditButton: "<button class='btn btn-primary btn-xs btn-block' onclick='btnEditDisbursementOnclick()'><i class='fa fa-edit fa-fw'></i> Edit</button>",
                                DeleteButton: "<button class='btn btn-danger btn-xs btn-block'  onclick='btnDeleteDisbursementOnclick(" + isLocked + ")'><i class='fa fa-trash fa-fw'></i> Delete</button>",
                                Id: disbursementListResult[i]["Id"],
                                DisbursementNumber: disbursementListResult[i]["DisbursementNumber"],
                                DisbursementDate: disbursementListResult[i]["DisbursementDate"],
                                BranchId: disbursementListResult[i]["BranchId"],
                                Branch: disbursementListResult[i]["Branch"],
                                AccountId: disbursementListResult[i]["AccountId"],
                                Account: disbursementListResult[i]["Account"],
                                Payee: disbursementListResult[i]["Payee"],
                                Particulars: disbursementListResult[i]["Particulars"],
                                DisburseAmount: disbursementListResult[i]["DisburseAmount"],
                                PreparedByUserId: disbursementListResult[i]["PreparedByUserId"],
                                PreparedByUser: disbursementListResult[i]["PreparedByUser"],
                                VerifiedByUserId: disbursementListResult[i]["VerifiedByUserId"],
                                VerifiedByUser: disbursementListResult[i]["VerifiedByUser"],
                                IsLocked: disbursementListResult[i]["IsLocked"],
                                CreatedByUserId: disbursementListResult[i]["CreatedByUserId"],
                                CreatedByUser: disbursementListResult[i]["CreatedByUser"],
                                CreatedDateTime: disbursementListResult[i]["CreatedDateTime"],
                                UpdatedByUserId: disbursementListResult[i]["UpdatedByUserId"],
                                UpdatedByUser: disbursementListResult[i]["UpdatedByUser"],
                                UpdatedDateTime: disbursementListResult[i]["UpdatedDateTime"]
                            });
                        }
                    }

                    NProgress.done();
                }
            });
            return disbursementListArray;
        }

        // add new disbursement
        function btnAddDisbursementOnclick() {
            document.getElementById("btnAddDisbursement").innerHTML = "<i class='fa fa-spinner fa-spin fa-fw'></i> Adding New Disbursement Application";
            $("#btnAddDisbursement").prop("disabled", true);

            $.ajax({
                type: "POST",
                url: '/api/disbursement/add',
                contentType: "application/json; charset=utf-8",
                success: function (id) {
                    if (id > 0) {
                        window.location = '/Software/DisbursementDetail?id=' + id;
                    } else {
                        toastr.error("Bad Request");
                    }
                }
            });
        }

        // edit disbursement
        function btnEditDisbursementOnclick() {
            disbursementCollectionView.editItem(disbursementCollectionView.currentItem);
            var id = disbursementCollectionView.currentEditItem.Id;
            window.location = '/Software/DisbursementDetail?id=' + id;
        }

        // delete disbursement
        function btnDeleteDisbursementOnclick(isLocked) {
            if (isLocked) {
                toastr.info("Record Locked");
            } else {
                $("#deleteConfirmationDisbursementModal").modal({
                    "show": true,
                    "backdrop": "static"
                });

                document.getElementById("btnConfirmDeleteDisbursement").innerHTML = "Yes";
                $("#btnConfirmDeleteDisbursement").prop("disabled", false);
                $("#btnCloseDeleteDisbursementModal").prop("disabled", false);
            }
        }
        function btnConfirmDeleteDisbursementOnclick() {
            document.getElementById("btnConfirmDeleteDisbursement").innerHTML = "<i class='fa fa-spinner fa-spin fa-fw'></i> Deleting";
            $("#btnConfirmDeleteDisbursement").prop("disabled", true);
            $("#btnCloseDeleteDisbursementModal").prop("disabled", true);

            disbursementCollectionView.editItem(disbursementCollectionView.currentItem);
            var id = disbursementCollectionView.currentEditItem.Id;
            $.ajax({
                url: '/api/disbursement/delete/' + id,
                type: "DELETE",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                statusCode: {
                    200: function () {
                        toastr.success("Delete Successful");

                        $('#deleteConfirmationDisbursementModal').modal('hide');

                        disbursementCollectionView = new wijmo.collections.CollectionView(getDisbursementList());
                        disbursementCollectionView.canFilter = true;
                        disbursementCollectionView.pageSize = 15;

                        var filterText = '';
                        $('#searchDisbursement').keyup(function () {
                            filterText = this.value.toLowerCase();
                            disbursementCollectionView.refresh();
                        });

                        disbursementCollectionView.filter = function (item) {
                            return !filterText || (item.DisbursementNumber.toLowerCase().indexOf(filterText) > -1)
                                               || (item.Payee.toLowerCase().indexOf(filterText) > -1);
                        }

                        disbursementCollectionView.collectionChanged.addHandler(function (sender, args) {
                            updateNavigateButtons();
                        });

                        disbursementCollectionView.currentChanged.addHandler(function (sender, args) {
                            updateStampSecurity();
                        });

                        // Flex Grid
                        disbursementFlexGrid.itemsSource = disbursementCollectionView;
                        disbursementFlexGrid.trackChanges = true;
                    },
                    404: function () {
                        toastr.error("Not Found");
                        $('#deleteConfirmationDisbursementModal').modal('hide');
                        document.getElementById("btnConfirmDeleteDisbursement").innerHTML = "Yes";
                        $("#btnConfirmDeleteDisbursement").prop("disabled", false);
                        $("#btnCloseDeleteDisbursementModal").prop("disabled", false);
                    },
                    400: function () {
                        toastr.error("Bad Request");
                        $('#deleteConfirmationDisbursementModal').modal('hide');
                        document.getElementById("btnConfirmDeleteDisbursement").innerHTML = "Yes";
                        $("#btnConfirmDeleteDisbursement").prop("disabled", false);
                        $("#btnCloseDeleteDisbursementModal").prop("disabled", false);
                    }
                }
            });
        }

        // navigation button for flexgrid
        function updateNavigateButtons() {
            if (disbursementCollectionView.pageSize <= 0) {
                document.getElementById('navigationPageGrid').style.display = 'none';
                return;
            }
            document.getElementById('navigationPageGrid').style.display = 'block';
            if (disbursementCollectionView.pageIndex === 0) {
                btnFirstPageGrid.setAttribute('disabled', 'disabled');
                btnPreviousPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            } else if (disbursementCollectionView.pageIndex === (disbursementCollectionView.pageCount - 1)) {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnLastPageGrid.setAttribute('disabled', 'disabled');
                btnNextPageGrid.setAttribute('disabled', 'disabled');
            } else {
                btnFirstPageGrid.removeAttribute('disabled');
                btnPreviousPageGrid.removeAttribute('disabled');
                btnNextPageGrid.removeAttribute('disabled');
                btnLastPageGrid.removeAttribute('disabled');
            }
            btnCurrentPageGrid.innerHTML = (disbursementCollectionView.pageIndex + 1) + ' / ' + disbursementCollectionView.pageCount;
        }

        // stamp security
        function updateStampSecurity() {
            var item = disbursementCollectionView.currentItem;
            document.getElementById('stampCreatedBy').innerHTML = item.CreatedByUser;
            document.getElementById('stampCreatedDate').innerHTML = item.CreatedDateTime;
            document.getElementById('stampUpdatedBy').innerHTML = item.UpdatedByUser;
            document.getElementById('stampUpdatedDate').innerHTML = item.UpdatedDateTime;
        }

        // create disbursement flexgrid
        function createDisbursementFlexGrid() {
            disbursementCollectionView = new wijmo.collections.CollectionView(getDisbursementList());
            disbursementCollectionView.canFilter = true;
            disbursementCollectionView.pageSize = 15;

            var filterText = '';
            $('#searchDisbursement').keyup(function () {
                filterText = this.value.toLowerCase();
                disbursementCollectionView.refresh();
            });

            disbursementCollectionView.filter = function (item) {
                return !filterText || (item.DisbursementNumber.toLowerCase().indexOf(filterText) > -1)
                                   || (item.Payee.toLowerCase().indexOf(filterText) > -1);
            }

            disbursementCollectionView.collectionChanged.addHandler(function (sender, args) {
                updateNavigateButtons();
            });

            disbursementCollectionView.currentChanged.addHandler(function (sender, args) {
                updateStampSecurity();
            });

            // Flex Grid
            disbursementFlexGrid = new wijmo.grid.FlexGrid('#disbursementListFlexGrid');
            disbursementFlexGrid.initialize({
                columns: [
                            {
                                "header": "Edit",
                                "binding": "EditButton",
                                "width": 80,
                                "align": "center",
                                "allowResizing": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "Delete",
                                "binding": "DeleteButton",
                                "width": 80,
                                "align": "center",
                                "allowResizing": false,
                                "isContentHtml": true
                            },
                            {
                                "header": "Date",
                                "binding": "DisbursementDate",
                                "allowSorting": true,
                                "width": "1.1*",
                            },
                            {
                                "header": "Disbursement No.",
                                "binding": "DisbursementNumber",
                                "allowSorting": true,
                                "width": "1.7*",
                            },
                            {
                                "header": "Payee",
                                "binding": "Payee",
                                "allowSorting": true,
                                "width": "2*",
                            },
                            {
                                "header": "Disburse Amount",
                                "binding": "DisburseAmount",
                                "allowSorting": true,
                                "width": "1.8*",
                            },
                            {
                                "header": "L",
                                "binding": "IsLocked",
                                "allowSorting": true,
                                "width": "0.5*",
                            }
                ],
                autoGenerateColumns: false,
                itemsSource: disbursementCollectionView,
                isReadOnly: true,
                autoSizeMode: wijmo.grid.AutoSizeMode.Both,
                allowDragging: wijmo.grid.AllowDragging.None,
                selectionMode: wijmo.grid.SelectionMode.Row
            });

            disbursementFlexGrid.trackChanges = true;

            //Navigation button
            btnFirstPageGrid = document.getElementById('btnMoveToFirstPageGrid');
            btnPreviousPageGrid = document.getElementById('btnMoveToPreviousPageGrid');
            btnNextPageGrid = document.getElementById('btnMoveToNextPageGrid');
            btnLastPageGrid = document.getElementById('btnMoveToLastPageGrid');
            btnCurrentPageGrid = document.getElementById('btnCurrentPageGrid');

            updateNavigateButtons();

            btnFirstPageGrid.addEventListener('click', function () {
                disbursementCollectionView.moveToFirstPage();
                updateNavigateButtons();
            });
            btnPreviousPageGrid.addEventListener('click', function () {
                disbursementCollectionView.moveToPreviousPage();
                updateNavigateButtons();
            });
            btnNextPageGrid.addEventListener('click', function () {
                disbursementCollectionView.moveToNextPage();
                updateNavigateButtons();
            });
            btnLastPageGrid.addEventListener('click', function () {
                disbursementCollectionView.moveToLastPage();
                updateNavigateButtons();
            });
        }

        // on load page
        window.onload = function () {
            NProgress.start();
            toastrModification();
            cboDisbursementDate = new wijmo.input.InputDate('#cboDisbursementDate');
            createCboDisbursementDate();
            createDisbursementFlexGrid();
        }
    </script>

</body>
</html>