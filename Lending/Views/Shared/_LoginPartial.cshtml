@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="/Home/Index#services">Services</a>
        </li>
        <li>
            <a href="/Home/Index#contact">Contact</a>
        </li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                @ViewData["FullName"] <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
                <li><a href="/Account/Login"><i class="fa fa-info fa-fw"></i> Profile</a></li>
                <li class="divider"></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out fa-fw"></i> Log Out</a></li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="/Home/Index#services">Services</a>
        </li>
        <li>
            <a href="/Home/Index#contact">Contact</a>
        </li>
        <li>
            <a href="/Account/Login">Login</a>
        </li>
    </ul>
}
