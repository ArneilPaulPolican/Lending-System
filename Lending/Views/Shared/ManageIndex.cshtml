@if (Request.IsAuthenticated)
{
    <!-- Section -->
    <section class="manage-section-custom">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Avatar
                            <button class="btn btn-default btn-xs pull-right" data-toggle="tooltip" title="Change Avatar" onclick="changeAvatar()">
                                <i class="fa fa-image"></i>
                            </button>
                        </div>
                        <div class="panel-body">
                            <img src="~/Images/landing-page/banner-bg.jpg" class="img-thumbnail" />
                        </div>
                        <div class="panel-footer">
                            <a href="/Software" class="btn btn-primary btn-lg btn-block">Launch Software</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            User Detail
                            <div class="btn-group pull-right">
                                <button class="btn btn-default btn-xs" data-toggle="tooltip" title="Edit" onclick="editPerosnalInformation()">
                                    <i class="fa fa-edit"></i> Edit
                                </button>
                                <a href="/Manage/ChangePassword" class="btn btn-default btn-xs" data-toggle="tooltip" title="Change your password">
                                    <i class="fa fa-pencil"></i> Change Password
                                </a>
                            </div>
                        </div>
                        <div class="panel-body">
                            <table class="table table-responsive">
                                <tr>
                                    <td class="td-pad">
                                        <i class="fa fa-user fa-fw"></i> &nbsp; Name
                                    </td>
                                    <td>
                                        <span id="userFullName"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="td-pad">
                                        <i class="fa fa-key fa-fw"></i> &nbsp; Username
                                    </td>
                                    <td>
                                        <span id="userUsername"></span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">

                </div>
                <div class="col-md-9">

                </div>
            </div>
        </div>
    </section>
}
else
{
    <section>
        @{ Response.Redirect("~/Account/Login");}
    </section>
}
