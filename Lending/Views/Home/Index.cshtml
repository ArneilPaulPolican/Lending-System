<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" href="~/Images/dlhicon.ico">

    <!-- Title -->
    <title>Web LIS</title>

    <!-- Styles -->
    @Styles.Render("~/Content/css")
</head>
<body>
    <!-- Header -->
    @Html.Partial("HomeHeader")

    <!-- Header -->
    <div class="intro-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Web Lending <br /> Information System</h1>
                        <h3>DLH Incorporated</h3>
                        <hr class="intro-divider">
                        @using Microsoft.AspNet.Identity
                        @if (Request.IsAuthenticated)
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                @Html.AntiForgeryToken()

                                <ul class="list-inline intro-social-buttons">
                                    <li>
                                        <div class="btn-group">
                                            <a href="/Manage/Index" class="btn btn-default btn-lg">
                                                <i class="fa fa-key fa-fw"></i> @ViewData["FullName"]
                                            </a>
                                            <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-danger btn-lg">
                                                <i class="fa fa-power-off fa-fw"></i>
                                            </a>
                                        </div>
                                    </li>
                                </ul>
                            }
                        }
                        else
                        {
                            <ul class="list-inline intro-social-buttons">
                                <li>
                                    <a href="/Manage/Index" class="btn btn-default btn-lg">
                                        <i class="fa fa-sign-in fa-fw"></i>
                                        Login
                                    </a>
                                </li>
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    @Html.Partial("HomeFooter")

    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>